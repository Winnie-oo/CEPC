<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#FFFFF7">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="22sp"
        android:text="修改用户信息"
        android:textColor="@color/brown" />
    <EditText
        android:id="@+id/update_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:hint="用户名"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/user"
        android:inputType="textNoSuggestions"/>
    <EditText
        android:id="@+id/update_addr"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:hint="地址"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/address"
        android:inputType="textNoSuggestions"/>
    <EditText
        android:id="@+id/update_tel"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:hint="电话"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/tel"
        android:inputType="textNoSuggestions"/>
    <EditText
        android:id="@+id/update_gender"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="3dp"
        android:hint="性别"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:drawableLeft="@mipmap/gender"
        android:inputType="textNoSuggestions"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/update_apply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改"
            android:layout_marginRight="10dp"
            android:textSize="20sp"/>

    </LinearLayout>
</LinearLayout>